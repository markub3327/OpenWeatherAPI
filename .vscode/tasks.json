{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build project",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}/include/nlohmann",
                "-o",
                "${workspaceFolder}/bin/bot",
                "-std=c++20",
                "-lcurl"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}